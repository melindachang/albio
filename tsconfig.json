{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
